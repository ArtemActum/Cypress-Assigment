{
  "compilerOptions": {
    "module": "ES6",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["ES2021.String", "DOM"],
    "types": ["cypress", "node"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "cypress/support/index.d.ts",
    "cypress/support/e2e.js",
    "cypress/support/commands.ts"
  ],
  "exclude": ["node_modules"],
  "compileOnSave": true
}
